<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    @Styles.Render("~/Content/css")

</head>
<body class="homeBody">
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><i class="fa fa-beer fa-2"></i>Brewr</a>
            </div>
            @using (Html.BeginForm("Login", "Account", FormMethod.Get, new { @class = "navbar-form navbar-right", @id="loginbtn", role = "form" }))
            {
                <button type="submit" class="btn btn-success">Login</button>
            }
            @using (Html.BeginForm("Register", "Account", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "form" }))
            {
                <button type="submit" class="btn btn-default">Sign Up</button>
            }
        </div>
    </nav>    
    <div class="container">
        @RenderBody()
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>