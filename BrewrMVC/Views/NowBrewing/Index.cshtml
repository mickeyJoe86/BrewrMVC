@model IEnumerable<BrewrMVC.Models.Brew>

@{
    ViewBag.Title = "NowBrewing";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Now Brewing</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>Started</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>@Html.DisplayFor(modelItem => item.BrewDate)</td>
        <td>
            @Html.ActionLink("Mash", "EditMash", new { id = item.ID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Ferment", "EditFermentation", new { id = item.ID }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Create New", "Create", "Brew", null, new { @class = "btn btn-success" })
</p>
