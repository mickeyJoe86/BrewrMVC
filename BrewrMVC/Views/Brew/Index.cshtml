@model IEnumerable<BrewrMVC.Models.Brew>

@{
    ViewBag.Title = "My Brews";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Brews</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrewDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Secondaried)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bottled)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(@item.Name, "Index", "BrewDetails",  new { id = item.ID}, null )
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BrewDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Secondaried)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bottled)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }, new { @class="btn btn-warning"})           
            @Html.ActionLink("Delete", "Delete", new { id=item.ID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
<hr />

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
